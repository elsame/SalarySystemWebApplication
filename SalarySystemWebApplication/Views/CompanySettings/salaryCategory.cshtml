@model SalarySystemWebApplication.Models.jobCatagoryModel
<h3>Stillingar fyrirtækis</h3>
<hr />
<ul class="nav nav-tabs">
    <li>@Html.ActionLink("Skráning fyrirtækis", "Index", "CompanySettings")</li>
    <li class="active">@Html.ActionLink("Launaflokkur", "salaryCategory", "CompanySettings")</li>
    <li>@Html.ActionLink("Launahópur", "salaryGroup", "CompanySettings")</li>
    <li>@Html.ActionLink("Launaliðir", "salaryItem", "CompanySettings")</li>
    <li>@Html.ActionLink("Frádráttarliðir", "deductionItem", "CompanySettings")</li>
</ul>
<p></p>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "taxOfficeform" }))
            {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <div class="row row-m-t">
            <div class="col-sm-2">
                <label>Lykill</label>
            </div>
            <div class="col-sm-4">
                <label>Heiti flokks</label>
            </div>
        </div>
        <div class="row row-m-t">
            <div class="col-sm-2">
                @Html.EditorFor(model => model.key, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.key, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <input type="submit" value="Vista" class="btn btn-default" />
                <input type="button" value="Hreinsa" class="btn btn-default" onclick='taxOfficeform.reset();return false;' />
            </div>
        </div>
            }
        <p></p>
        <font size="2">
            <table class="table">

                <tr>
                    <th>
                        <label>Flokkur</label>
                    </th>
                    <th>
                        <label>Heiti</label>
                    </th>
                    <th>
                        <label>Breyta</label>
                    </th>
                    <th>
                        <label>Eyða</label>
                    </th>
                </tr>
                @foreach (var item in Model.salaryCatagoryList)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.ActionLink("Breyta", "EditSalaryCategory", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Eyða", "DeleteSalaryCategory", new { id = item.Id }, new { onclick = "return confirm('Ertu viss um að þú viljir eyða þessum launaflokki?');" })
                </td>
            </tr>
                }

            </table>
        </font>
